<Button>:
    font_size:40
    color:34,35,69
    size_hint: 0.3, 0.5

<FloatLayout>:
    Button:
        pos_hint:{'x':0.5, 'top':1}
        text: "Submit"

    Button:
        id: btn
        pos_hint: {'x':0.02,'y':0.3}
        text: "Submit" if btn.state == "normal" else 'Down'
        background_color:30,30,30
